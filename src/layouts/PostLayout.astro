---
import type { CollectionEntry } from "astro:content";
import BaseLayout from "./BaseLayout.astro";
import Post from "../components/Post.astro";

type Props =
  | CollectionEntry<"gallery">["data"]
  | CollectionEntry<"artwork">["data"]
  | CollectionEntry<"textPosts">["data"];

const { title, blurb = "", imageUrl = "", imageAltText = "" } = Astro.props;
---

<BaseLayout title={title} description={blurb} image={imageUrl}>
  <Post {...Astro.props}><slot /></Post>
</BaseLayout>
