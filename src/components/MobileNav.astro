---
import { getNavLinks } from "../lib/postUtils.astro";
const navLinks = await getNavLinks();
---

<nav id="mobile-nav" class="mobile-only">
  <div class="mobile-menu" onclick="menuToggle()">
    <span>Menu</span>
    <div class="hamburger">
      <div class="mobile-only hamburger image-container">
        <svg
          id="close-icon"
          class="menu-icon"
          width="16"
          height="9"
          viewBox="0 0 16 9"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          aria-label="Close Menu"
        >
          <path
            d="M16 0.89L15.56 0L8 3.94L0.44 0L0 0.89L6.93 4.5L0 8.11L0.44 9L8 5.06L15.56 9L16 8.11L9.07 4.5L16 0.89Z"
            fill="currentColor"></path>
        </svg>
      </div>
    </div>
  </div>
  <div class="nav-container">
    <ul>
      {
        navLinks.map((item) => (
          <li>
            <a href={item.href}>{item.title}</a>
          </li>
        ))
      }
    </ul>
  </div>
</nav>
<style>
  nav {
    display: none;
  }

  @media (max-width: 820px) {
    .mobile-menu {
      display: flex;
      align-items: center;
      column-gap: 0.5rem;
      cursor: pointer;
      justify-content: flex-end;
      padding: 1rem 2rem;
      color: var(--header-color);
      max-height: 2.25rem;
      min-height: 2.25rem;

      span {
        font-size: 1rem;
        line-height: 1.125rem;
      }
    }
    nav {
      display: none;
      background-color: var(--theme-background);
      width: 240px;
      position: fixed;
      right: 0;
      bottom: 0;
      z-index: 10;
      height: 100vh;

      .nav-container {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
        padding: 4rem 0;
        padding-bottom: 6rem;
      }

      ul {
        list-style-type: none;
        padding: 0;
        margin: 0;
        flex-direction: column;
      }

      li {
        display: flex;
        justify-content: flex-end;
        align-items: center;
      }

      a {
        display: block;
        padding: 0 1.25rem 0 1rem;
        text-decoration: none;
        transition: color 0.2s ease;
        font-size: 1.25rem;
        line-height: 2.5rem;
        font-weight: 400;
        color: var(--header-color);

        &:hover {
          color: var(--link-color);
          text-decoration: dotted underline;
          text-underline-offset: 0.2rem;
          text-decoration-thickness: 10%;
        }
      }
    }
  }
  @media (max-width: 580px) {
    nav {
      width: 100%;
    }
  }
  @media (max-width: 575px) {
    .mobile-menu span {
      display: none;
    }
  }
</style>
