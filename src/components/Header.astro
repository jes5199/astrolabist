---
import HeaderLink from "./HeaderLink.astro";
import MobileNav from "./MobileNav.astro";
import { SITE_TITLE } from "../consts";
import { getNavLinks } from "../lib/postUtils.astro";

const navLinks = await getNavLinks();
---

<header>
  <div class="desktop-header">
    <div class="header-container">
      <a class="title title-text" href="/">{SITE_TITLE}</a>

      <nav>
        {
          navLinks.map((item) => (
            <HeaderLink href={item.href}>{item.title}</HeaderLink>
          ))
        }
      </nav>
    </div>
  </div>
  <div class="mobile-header">
    <div class="header-container">
      <a class="title" href="/">{SITE_TITLE}</a>
      <div class="mobile-menu" onclick="menuToggle()">
        <span>Menu</span>
        <div class="hamburger">
          <div class="mobile-only hamburger image-container">
            <svg
              id="hamburger-icon"
              class="menu-icon"
              width="16"
              height="9"
              viewBox="0 0 16 9"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-label="Menu"
            >
              <path
                d="M16 1H0V0H16V1ZM16 4H0V5H16V4ZM16 8H0V9H16V8Z"
                fill="currentColor"></path>
            </svg>
            <svg
              id="close-icon"
              class="menu-icon"
              width="16"
              height="9"
              viewBox="0 0 16 9"
              fill="none"
              xmlns="http://www.w3.org/2000/svg"
              aria-label="Close Menu"
            >
              <path
                d="M16 0.89L15.56 0L8 3.94L0.44 0L0 0.89L6.93 4.5L0 8.11L0.44 9L8 5.06L15.56 9L16 8.11L9.07 4.5L16 0.89Z"
                fill="currentColor"></path>
            </svg>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
<MobileNav />

<style>
  header {
    width: 100%;
    margin-bottom: 2rem;

    * {
      color: var(--header-color);
    }
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    column-gap: 1rem;
  }

  .logo-container {
    display: flex;
    align-items: center;
    column-gap: 1rem;

    img {
      height: 4rem;
      min-width: 4rem;
      width: 4rem;
    }
  }

  .mobile-menu {
    display: flex;
    align-items: center;
    column-gap: 0.5rem;
    cursor: pointer;

    span {
      font-size: 1rem;
      line-height: 1.125rem;
    }
  }

  .title {
    margin: 0;
    padding: 0;
    display: block;
    font-size: 2.25rem;
    font-weight: 600;
    line-height: 2.25rem;
    font-family: var(--header-font);
    text-decoration: none;

    &:hover {
      text-decoration: dotted underline;
      text-decoration-skip-ink: none;
      text-decoration-thickness: 4%;
      text-underline-offset: 0.25rem;
    }
  }

  nav {
    display: flex;
    align-items: center;
    column-gap: 2.5rem;
  }
  nav a {
    padding: 0.5em 0;
    border-bottom: 4px solid transparent;
    text-decoration: none;
    line-height: 1.125rem;
    font-weight: 500;
    font-size: 1rem;

    &:hover {
    }
  }
  nav a.active {
    text-decoration: underline;
    text-decoration-thickness: 5%;
    text-decoration-skip-ink: true;
  }

  @media (max-width: 1060px) {
    nav {
      column-gap: 1rem;
    }
  }

  .desktop-header {
    display: block;
  }
  .mobile-header {
    display: none;
  }

  .title {
    display: block;
  }
  .hamburger {
    display: flex;
    align-items: center;
  }
  .menu-icon {
    color: var(--header-color);
    width: 16px;
    height: 9px;
    display: inline-block;
    margin-top: 3px;
  }
  #close-icon {
    display: none;
  }

  @media (max-width: 820px) {
    .desktop-header {
      display: none;
    }
    .mobile-header {
      display: block;
    }
    .title {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 575px) {
    .mobile-menu span {
      display: none;
    }
  }
</style>
