---
import type { CollectionEntry } from "astro:content";
import FormattedDate from "./FormattedDate.astro";

interface Props {
    posts: CollectionEntry<"gallery">[] | CollectionEntry<"artwork">[];
}

const { posts } = Astro.props;
---

<ul>
    {
        posts.map((post) => (
            <li>
                <a href={`/${post.collection}/${post.slug}/`}>
                    <img
                        src={post.data.imageUrl}
                        alt={post.data.imageAltText}
                    />
                </a>
            </li>
        ))
    }
</ul>
<style>
    ul {
        list-style-type: none;
        width: 100%;
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        gap: 0.75rem;
        padding: 0;
        margin: 2rem 0;

        li {
            margin: 0;

            a {
                display: block;
                height: fit-content;

                img {
                    display: block;
                    width: 100%;
                    height: auto;
                    aspect-ratio: 4/3;
                }
            }
        }
    }
</style>
