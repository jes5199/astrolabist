---
import { map } from "astro:schema";

const { tags } = Astro.props;
---

<ul>
  {
    tags.map((tag: string) => (
      <a href={`/tags/${tag}`}>
        <li>{tag}</li>
      </a>
    ))
  }
</ul>

<style>
  ul {
    display: flex;
    flex-wrap: wrap;
    padding: 0;
    gap: 0.625rem;
  }
  li {
    list-style: none;
    padding: 0.5rem 1.25rem;
    font-size: 1rem;
    line-height: 1rem;
    font-weight: 500;
    color: var(--theme-text);
    border: 1px solid var(--tag-border);
    border-radius: 2rem;
  }
  a {
    text-decoration: none;
  }
  a:hover {
    text-decoration: none;

    li {
      color: var(--text-hover);
      border-color: var(--tag-border-hover);
    }
  }
</style>
