---
import { SITE_TITLE } from "../consts";
import SocialButtons from "./SocialButtons.astro";
import { nav } from "../content/nav.astro";

const currentYear = new Date().getFullYear();
---

<footer id="footer">
  <nav class="footer-links">
    {nav.map((item) => <a href={item.href}>{item.title}</a>)}
  </nav>
  <div class="copyright">
    <div>
      Â© {currentYear}
      {SITE_TITLE}. All rights reserved.
    </div>
    <a><img src="/assets/instagram.svg" /></a>
  </div>
</footer>
<style>
  footer {
    padding: 80px 124px 60px;
    width: 100%;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    color: var(--footer-color);
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    width: 100%;
  }

  .footer-links a {
    font-size: 1rem;
    font-weight: 400;
    text-decoration: none;
    color: var(--text-color);
  }

  .footer-links a:hover {
    text-decoration: underline;
  }

  .copyright {
    font-size: 1rem;
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    column-gap: 0.75rem;
    font-weight: 500;
    font-style: italic;
    color: var(--footer-color);

    a {
      display: block;
      height: 19px;
    }
  }

  @media (max-width: 768px) {
    footer {
      padding: 3rem 2rem;
      section {
        flex-direction: column;
        align-items: center;
        gap: 1.5rem;
        margin-bottom: 2rem;
      }
    }

    .footer-links {
      justify-content: center;
      margin-bottom: 1rem;
      width: 100%;
    }

    .copyright {
      text-align: center;
    }
  }
</style>
