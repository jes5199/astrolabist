---
import { SITE_TITLE } from "../consts";
import SocialButtons from "./SocialButtons.astro";
import { getNavLinks } from "../lib/postUtils.astro";

const navLinks = await getNavLinks();
const currentYear = new Date().getFullYear();
---

<footer id="footer">
  <div class="footer-inner">
    <div class="site-title">
      <a href="/">{SITE_TITLE}</a>
    </div>
    <nav class="footer-links">
      {navLinks.map((item) => <a href={item.href}>{item.title}</a>)}
    </nav>
    <div class="social-links">
      <SocialButtons />
    </div>
  </div>
</footer>
<style>
  #theme-toggle {
    margin: 0 auto;
  }
  footer {
    width: 100%;
  }

  .footer-inner {
    position: relative;
    z-index: 1;
    padding: 80px 0 60px;
    width: 100%;
    max-width: 800px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    column-gap: 1rem;
    margin: 0 auto;

    * {
      color: var(--theme-text);
      fill: var(--theme-text);
    }
  }

  .site-title {
    font-family: var(--header-font);
    font-weight: 600;
    font-size: 1.25rem;
    line-height: 1.25rem;

    a {
      text-decoration: none;
    }
  }

  .footer-links {
    display: flex;
    gap: 1.25rem;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    width: 100%;
  }

  .footer-links a {
    font-size: 0.875rem;
    font-weight: 500;
    text-decoration: none;
    color: var(--theme-text);
  }

  .footer-links a:hover {
    text-decoration: underline;
  }

  .copyright {
    font-size: 1rem;
    width: 100%;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    column-gap: 0.75rem;
    font-weight: 500;
    font-style: italic;

    a {
      display: block;
      height: 19px;
    }
  }

  @media (max-width: 820px) {
    .footer-inner {
      padding: 20px 20px 60px;
      gap: 2rem;
    }
    section {
      flex-direction: column;
      align-items: center;
      gap: 1.5rem;
      margin-bottom: 2rem;
    }
    .footer-links {
      justify-content: center;
      margin-bottom: 1rem;
      width: 100%;
    }

    .copyright {
      text-align: center;
    }
  }

  @media (max-width: 580px) {
    .footer-inner {
      flex-direction: column;
      row-gap: 0.75rem;
      padding-bottom: 40px;
    }
    .footer-links {
      flex-direction: column;
      row-gap: 0.75rem;
    }
  }
</style>
